<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventDescriptionFragmentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/Vocalendar" >

   <TextView
		android:id="@+id/detailDateText"
		style="@style/VocalendarContent"				
      	android:layout_width="match_parent"
       	android:layout_height="wrap_content"
        android:layout_weight="0.0"
       	android:background="@color/separator"
       	android:textColor="@color/separatorText"
     	android:paddingTop="5sp"
   	 	android:paddingBottom="5sp"
        android:text="date" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="0.0"
       android:orientation="horizontal" >

       <TextView
           android:id="@+id/detailSummaryText"
           style="@style/VocalendarContent"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1.0"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="10dp"
           android:text="summary"
           android:textSize="22sp"
           android:textStyle="bold" />
	    <ImageView
	        android:id="@+id/favorite_image_view"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:src="@drawable/not_favorite" />
       
   </LinearLayout>

	<LinearLayout
	    android:id="@+id/locationLinearLayout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.0"
	    android:paddingBottom="5dp" >

		<TextView
		    android:id="@+id/locationTextLabel"
			style="@style/VocalendarContent"				
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingRight="0dp"
		    android:text="@string/location_plus_colon" />

		<TextView
		    android:id="@+id/locationTextView"
			style="@style/VocalendarContent"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingLeft="0dp"
		    android:paddingRight="0dp"
		    android:layout_weight="1"
		    android:textIsSelectable="true"
		    android:text="どこか" />

	</LinearLayout>
    
	<ScrollView
		android:id="@+id/eventDescriptionScrollView"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1.0" >
        <TextView
           	android:id="@+id/detailDescriptionText"
			style="@style/VocalendarContent"
           	android:layout_width="match_parent"
           	android:layout_height="wrap_content"
	        android:textSize="16sp"
	        android:textIsSelectable="true"
           	android:text="description" />
	</ScrollView>	
</LinearLayout>
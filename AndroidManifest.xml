<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.vocalendar"
    android:versionCode="9821"
    android:versionName="0.98.2-beta20131015" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>

    <application
        android:icon="@drawable/ic_vocalendar"
        android:name="jp.vocalendar.VocalendarApplication"
        android:label="@string/app_name" android:theme="@style/Vocalendar">
        <activity
            android:name=".activity.EventListActivity"
            android:theme="@style/VocalendarActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name=".activity.EventLoadingActivity"
            android:theme="@style/VocalendarActionBar">            
        </activity>
        <activity 
            android:name=".activity.SwipableEventDescriptionActivity"
            android:theme="@style/VocalendarActionBar">            
        </activity>        
        <activity 
            android:name=".activity.OneEventDescriptionActivity"
            android:theme="@style/VocalendarActionBar" >
        </activity>        
        <activity
            android:name=".activity.SettingActivity"
            android:theme="@style/VocalendarActionBar" >
        </activity>
        <activity android:name=".activity.AboutActivity"></activity>
        <activity
            android:name=".activity.PreviewLoadingPageActivity"
            android:theme="@style/VocalendarActionBar" >
            
        </activity>
        <activity android:name="jp.vocalendar.util.ExceptionReportActivity"></activity>
        <activity
             android:name=".activity.SearchableEventActivity"
             android:theme="@style/VocalendarActionBar">
        	<intent-filter>
            	<action android:name="android.intent.action.SEARCH" />
        	</intent-filter>
        	<meta-data android:name="android.app.searchable"
            	       android:resource="@xml/searchable"/>
        </activity>
        <activity
            android:name=".activity.CustomColorThemeActivity"
            android:theme="@style/VocalendarActionBar" >            
        </activity>
        
        <activity
            android:name=".activity.PreviewEventListActivity"
            android:theme="@style/VocalendarActionBar" >            
        </activity>

        <activity
            android:name=".activity.FavoriteEventListActivity"
            android:theme="@style/Theme.AppCompat.Light">            
        </activity>
        
        <meta-data android:name="android.app.default_searchable"
                   android:value=".activity.SearchableEventActivity" />
	</application>

</manifest>
